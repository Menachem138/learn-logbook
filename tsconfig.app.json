{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* React Native */
    "types": [
      "react-native",
      "jest",
      "expo",
      "@types/react-native"
    ],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@mobile/*": ["./src/mobile/*"]
    }
  },
  "include": [
    "src",
    "capacitor.config.ts",
    "src/types/**/*.ts",
    "src/types/**/*.tsx",
    "src/mobile/**/*.ts",
    "src/mobile/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
